<h1> All Books</h1>
<%= link_to "Home", root_path %>


<ul class = "books">
<% @books.each do |book| %>
<li>  <%= book.title %> </li>
<li>  <%= book.author %> </li>
<li>  <%= link_to image_tag(book.image, {class: "book_cover_link", id: "book_#{book.id}"}), book_path(book) %> </li><br>
<% end %>
</ul>
